     <script>
        function confirmDelete() {
        return confirm('คุณแน่ใจหรือไม่ว่าต้องการลบรายการนี้?'); // แสดงกล่องข้อความยืนยัน
    }
     </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <div class="container">

        <div class="sidebar">
            <div class="user-info">
                <div class="user-avatar">
                    <%=sessions.loginsession.name.charAt(0).toUpperCase()%>
                </div>
                <div class="user-email">
                    <%=sessions.loginsession.name%>
                </div>
            </div>

            <ul class="menu">
                <li >
                    <a href="/adminhome">
                        <img src="/images/ภาพรวมสีดำ.png" alt="ภาพรวม">
                        <p>ภาพรวม</p>
                    </a>
                </li>


                <li class="active">
                    <a href="/dog">
                        <img src="/images/จัดการพันธุ์สุนัขสีขาว.png" alt="จัดการพันธุ์สุนัข">
                        <p>จัดการพันธุ์สุนัข</p>
                    </a>
                </li>

                <li>
                    <a href="/userdetails">
                        <img src="/images/จัดการบัญชีผู้ใช้.png" alt="จัดการบัญชีผู้ใช้">
                        <p>จัดการบัญชีผู้ใช้</p>
                    </a>
                </li>
                <li>
                  
                </li>
                <li>
                    <a href="/login/logout"><button class="logout">ออกจากระบบ</button></a>
                </li>
            </ul>


        </div>

        <div class="content">
            <div class="header">
                จัดการพันธุ์สุนัข
            </div>
            <div class="actions">
                <a href="/dog/addbreed" rel="noopener noreferrer">
                    <button class="add-btn">+ เพิ่มพันธุ์สุนัข</button>

                </a>
            </div>

            <table class="breed-table">
                <thead>
                    <tr>
                        <th>ลำดับ</th>
                        <th>รูปภาพ</th>
                        <th>ชื่อพันธุ์สุนัข</th>
                        <th>แก้ไข</th>
                        <th>ลบ</th>
                    </tr>
                </thead>
                <tbody>
                    <% dogs.forEach((dog, index)=> { %>

                        <tr>
                          <td>
                            <%= index + 1 %>
                          </td>
                          <td class="imagedog">
                            <img alt="dog" src="/uploads/<%=dog.image%>">

                          </td>
                  
                          <td>
                            <a href="/adminBreed/<%=dog._id%>" rel="noopener noreferrer">
                              <%= dog.breed %>
                            </a><br>
                          </td>
                  
                            <td><a href="/dog/editbreed/<%= dog._id %>"><button class="edit-btn">แก้ไข</button></a></td>
                            <td><a href="/dog/delete/<%= dog._id %>" onclick="return confirmDelete();">
                                <button class="delete-btn">ลบ</button>
                            </a></td>
                        </tr>
                        
                        <% }) %>
                    <tr>

                    </tr>

                </tbody>
            </table>

        </div>
    </div>

</body>

